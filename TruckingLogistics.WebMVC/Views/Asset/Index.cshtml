@model IEnumerable<TruckingLogistics.Models.RosterAsset.AssetList>

@{
    ViewBag.Title = "Index";
}

<h2>Your drivers, trucks, and trailers.</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.RosterId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TruckNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TrailerNumber)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RosterId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TruckNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TrailerNumber)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.RosterId }) |
                @Html.ActionLink("Details", "Details", new { id = item.RosterId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.RosterId })
            </td>
        </tr>
    }

</table>

<style>
    h2 {
        color: gold;
    }

    body {
        background-image: url('../../Content/Assets/semis.jpeg');
        background-repeat: no-repeat;
        background-size: 100%;
    }

    .table {
        position: center center;
        width: 80%;
        background-color: rgba(30,31,36, .7);
    }

    td, a, tr {
        color: gold;
    }
</style>